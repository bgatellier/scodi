{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"include": [
			"./*.d.ts", // custom @types packages
			"src/**/*.ts",
			"tests/**/*.ts"
		],
		"ignore": ["templates/*.ts"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	}
}
