  },
  "devDependencies": {
    "@types/express": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@scodi/cli": "workspace:^4.0.0"
  },
  "engines": {
    "node": ">=18 <23"
